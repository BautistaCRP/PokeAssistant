<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingVertical="10dp"
    android:paddingRight="60dp"
    android:paddingLeft="15dp"
    android:clipToPadding="false">

    <LinearLayout
        android:id="@+id/linear_layoutITO"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="@drawable/bg_watson_message">

        <ImageView
            android:id="@+id/image"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:padding="10dp"
            android:src="@drawable/ic_photo_default_200dp"/>

        <TextView
            android:id="@+id/text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="10dp"
            android:elevation="2dp"
            android:textSize="18dp"
            android:text="Default text... Default text... Default text... Default text... Default text... Default text... "/>

        <TextView
            android:id="@+id/title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="10dp"
            android:elevation="2dp"
            android:textSize="20dp"
            android:textStyle="bold"
            android:text="Title"
            />

        <LinearLayout
            android:id="@+id/linear_layoutTO"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_margin="10dp"
            android:layout_marginLeft="15dp">

        </LinearLayout>

    </LinearLayout>

</RelativeLayout>